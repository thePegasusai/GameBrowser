{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "parser": "typescript",
  "overrides": [
    {
      "files": ["*.glsl", "*.frag", "*.vert"],
      "options": {
        "parser": "glsl-parser"
      }
    },
    {
      "files": ["**/*.{ts,tsx}"],
      "options": {
        "parser": "typescript"
      }
    }
  ]
}